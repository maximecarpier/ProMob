<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".solo_menu">

    <ImageView
        android:id="@+id/decor"
        android:layout_width="986dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.935"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/cartoon_landscape" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="900dp"
        android:layout_height="920dp"
        android:layout_marginTop="139dp"
        android:layout_marginEnd="388dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.662"
        app:srcCompat="@drawable/cloud1" />

    <Button
        android:id="@+id/carrote"
        android:layout_width="68dp"
        android:layout_height="66dp"
        android:layout_marginStart="164dp"
        android:layout_marginBottom="296dp"
        android:background="@drawable/carrot"
        android:onClick="carrote"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/prison"
        android:layout_width="68dp"
        android:layout_height="66dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="152dp"
        android:background="@drawable/lapin_prison"
        android:onClick="prison"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/eau"
        android:layout_width="68dp"
        android:layout_height="66dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="292dp"
        android:background="@drawable/taupe_menu"
        android:onClick="eau"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/cupcake"
        android:layout_width="68dp"
        android:layout_height="66dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="148dp"
        android:background="@drawable/rainbow_cupcake"
        android:onClick="cupcake"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/rocher"
        android:layout_width="68dp"
        android:layout_height="66dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="392dp"
        android:background="@drawable/rock"
        android:onClick="rocher"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/question"
        android:layout_width="121dp"
        android:layout_height="64dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="232dp"
        android:background="@drawable/question"
        android:onClick="question"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/quick"
        android:layout_width="199dp"
        android:layout_height="85dp"
        android:layout_marginTop="132dp"
        android:background="@drawable/cloud"
        android:fontFamily="@font/annie_use_your_telescope"
        android:onClick="quick_game"
        android:text="\n Quick Game"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.886"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/play"
        android:layout_width="179dp"
        android:layout_height="87dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/cloud"
        android:fontFamily="@font/annie_use_your_telescope"
        android:onClick="routine"
        android:text="\nPlay"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>

